#position-sections
    %h1 Create Sections for your Template
    #form
        %h2 Sections
        .container 
            = content_tag :div, @template.name, class: 'drag-drop', data: { draggable: true, resizable: true }
    #preview
        %h2 Preview 
        - if(@template.background_image.attached?)
            = image_tag(@template.background_image, size: "210x280")