= javascript_pack_tag "makeSection"
#section-settings
    = form_with model: @template, id: "form-input", url: wizard_path, method: :put do |t|
        - @template.days.each do |day|
            = t.fields_for :days, day do |d| 
                = day.x_offset
                - day.sections.each do |section|
                    = d.fields_for :sections, section do |s|
                        #instance.row
                            #form.col
                                %label{for: "section_name"} Name
                                = s.text_field :name, class: "form-control input-lg", id: "name"
                                %label{for: "section_color"} Text Color
                                = s.color_field :text_colors, multiple: true, class: "form-control", id: "color"
                                %label{for: "section_delineator"} Delineator
                                = s.select :delineator, ['Â·', '/'],class: "form-control", id: "delineator"
                                %label{for: "section_delineator_color"} Delineator Color
                                = s.color_field :delineator_color, multiple: true, class: "form-control input-lg",  id: "delineator-color"
                                %label{for: "section_max_acts"} Maximum # of Acts
                                = s.number_field :max_act_count, class: "form-control input-lg", id: "max_acts"
                            .container.col
                                = image_tag(@template.background_image, style: "height: auto; width: 100%", class: "preview_image")
                                %script{type:"text/javascript"}
                                    var dayHeight = "#{day.height}";
                                    var dayWidth = "#{day.width}";
                                    var dayXOffset = "#{day.x_offset}";
                                    var dayYOffset = "#{day.y_offset}";
                                    var sectionHeight = "#{section.height}";
                                    var sectionWidth = "#{section.width}";
                                    var sectionXOffset = "#{section.x_offset}";
                                    var sectionYOffset = "#{section.y_offset}";
                                    makeBoxes(dayHeight, dayWidth, dayXOffset, dayYOffset, sectionHeight, sectionWidth, sectionXOffset, sectionYOffset);
        %script{type:"text/javascript"}
            resetIndex();
        = t.submit "CONTINUE", class: "btn btn-primary"