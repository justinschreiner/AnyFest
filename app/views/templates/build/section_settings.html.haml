#section-settings
    = form_with model: @template, id: "form-input", url: wizard_path, method: :put do |t|
        - @template.days.each do |day|
            = t.fields_for :days, day do |d|
                #accordionDay.accordion
                    #instance
                        #dayHeading
                            %h2.mb-0
                                %a#dayAccordionHeader{"aria-controls": "collapseDay", "aria-expanded": "true", "href": "#collapseDay", "data-toggle": "collapse", "type": "button"}
                                    Day Settings
                        #collapseDay.collapse.show{"aria-labelledby": "dayHeading", "data-parent": "#accordionDay"}
                            = content_tag :div, nil, data: {controller: "daybox", daybox_height: day.height, daybox_width: day.width, daybox_x_offset: day.x_offset, daybox_y_offset: day.y_offset} do
                                .form-content.row
                                    .form.col
                                        %label{for: "section_name"} Name
                                        = d.text_field :name, class: "form-control input-lg", id: "name"
                                        %a.btn.btn-primary#innerDayCollapse{"aria-controls": "collapseDay", "aria-expanded": "true", "href": "#collapseDay", "data-toggle": "collapse", "type": "button"}
                                            HIDE
                                    .container.col{"data-target": "daybox.output"}
                                        = image_tag(@template.background_image, style: "height: auto; width: 100%", class: "preview_image")
                                        -# %script{type:"text/javascript"}
                                        -#     var dayHeight = "#{day.height}";
                                        -#     var dayWidth = "#{day.width}";
                                        -#     var dayXOffset = "#{day.x_offset}";
                                        -#     var dayYOffset = "#{day.y_offset}";
                                            -# makeDay(dayHeight, dayWidth, dayXOffset, dayYOffset);
                                            -# makeDayIdUnique();
                - day.sections.each do |section|
                    = d.fields_for :sections, section do |s|
                        #accordionSection.accordion
                            #instance
                                #sectionHeading
                                    %h2.mb-0
                                        %a#sectionAccordionHeader{"aria-controls": "collapseSection", "aria-expanded": "true", "href": "#collapseSection", "data-toggle": "collapse", "type": "button"}
                                            Section Settings
                                #collapseSection.collapse.show{"aria-labelledby": "sectionHeading", "data-parent": "#accordionSection"}
                                    .form-content.row
                                        .form.col
                                            %label{for: "section_name"} Name
                                            = s.text_field :name, class: "form-control input-lg", id: "name"
                                            .row
                                                %label{for: "section_alternating_colors"} Alternating Text Colors?
                                                = s.check_box :alternating_colors, class: "form-check-input",  id: "alternating-color", onchange: "collapseAddColor(this)"
                                            .color-fields    
                                                %label{for: "section_color"} Text Color
                                                = s.color_field :text_colors, class: "form-control input-lg text-color",  id: "text-color"
                                                .collapse#colors
                                                    %button.add-button{ onclick: "addColorField(this)" }
                                                        = fa_icon "plus-square"
                                            .row
                                                .col
                                                    %label{for: "section_delineator"} Delineator
                                                    = s.select :delineator, ['Â·', '/'], {}, class: "form-control", id: "delineator"
                                                .col
                                                    %label{for: "section_delineator_color"} Delineator Color
                                                    = s.color_field :delineator_color, class: "form-control input-lg",  id: "delineator-color"
                                            %label{for: "section_max_acts"} Maximum # of Acts
                                            = s.number_field :max_act_count, min: 1, class: "form-control input-lg", id: "max_acts"
                                            %a.btn.btn-primary#innerSectionCollapse{"aria-controls": "collapseSection", "aria-expanded": "true", "href": "#collapseSection", "data-toggle": "collapse", "type": "button"}
                                                HIDE
                                        .container.col
                                            = image_tag(@template.background_image, style: "height: auto; width: 100%", class: "preview_image")
                                            %script{type:"text/javascript"}
                                                var dayHeight = "#{day.height}";
                                                var dayWidth = "#{day.width}";
                                                var dayXOffset = "#{day.x_offset}";
                                                var dayYOffset = "#{day.y_offset}";
                                                var sectionHeight = "#{section.height}";
                                                var sectionWidth = "#{section.width}";
                                                var sectionXOffset = "#{section.x_offset}";
                                                var sectionYOffset = "#{section.y_offset}";
                                                -# makeBoxes(dayHeight, dayWidth, dayXOffset, dayYOffset, sectionHeight, sectionWidth, sectionXOffset, sectionYOffset);
                                                makeSectionIdUnique();
                                                prepColorFields();
        %script{type:"text/javascript"}
            resetIndex();
        = t.submit "CONTINUE", class: "btn btn-primary"