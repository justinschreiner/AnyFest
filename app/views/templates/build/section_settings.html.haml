= javascript_pack_tag "makeSection"
#section-settings
    - @template.days.each do |day|
        = day.x_offset
        - day.sections.each do |section|
            #instance.row
                #form.col
                #container.col
                    = image_tag(@template.background_image, style: "height: auto; width: 100%", class: "preview_image")
                    %script{type:"text/javascript"}
                        var dayHeight = "#{day.height}";
                        var dayWidth = "#{day.width}";
                        var dayXOffset = "#{day.x_offset}";
                        var dayYOffset = "#{day.y_offset}";
                        var sectionHeight = "#{section.height}";
                        var sectionWidth = "#{section.width}";
                        var sectionXOffset = "#{section.x_offset}";
                        var sectionYOffset = "#{section.y_offset}";
                        makeBoxes(dayHeight, dayWidth, dayXOffset, dayYOffset, sectionHeight, sectionWidth, sectionXOffset, sectionYOffset);