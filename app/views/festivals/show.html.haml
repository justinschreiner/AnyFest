#show-festival
    %h1#name
        %b
            = @festival.name
    %h4#location
        = @festival.location
    %h2 Search
    = form_with method: :get, local: true do |s|
        = s.text_field :q, class: "form-control d-inline-block"
        = s.submit "SEARCH", class: "btn btn-primary d-inline-block"
    %h3#search-lineups
        %b Lineups
    #lineup-results
        - @lineups.each do |l|
            %li
                = link_to template_lineup_path(template_id: l.template.id, id: l.id) do
                    = image_tag(l.template.background_image, class: "preview-image")
    %h3#search-templates
        %b Templates
    #template-results
        - @templates.each do |t|
            %li
                = link_to template_path(t) do
                    = image_tag(t.background_image, class: "preview-image")