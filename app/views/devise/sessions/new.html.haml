= render "devise/shared/anyfest"
#login.ml-7
  %h1.font-weight-bold Existing Users
  = form_for(resource, as: resource_name, url: session_path(resource_name)) do |f|
    .field.form-group
      %h5= f.label :email, "email"
      = f.email_field :email, autofocus: true, autocomplete: "email", class: "form-control input-lg"
    .field.form-group
      %h5= f.label :password, "password"
      = f.password_field :password, autocomplete: "current-password", class: "form-control input-lg"
    - if devise_mapping.rememberable?
      %h5.field.form-group
        = f.check_box :remember_me
        = f.label :remember_me, "remember me"
    .actions.mt-2
      %h6= f.submit "LOG IN", class: "btn btn-primary"
  %h5.mt-2.ml-1= render "devise/shared/links"
