    = stylesheet_link_tag "http://fonts.googleapis.com/css?family=Oswald:400,700,900"
    = stylesheet_link_tag "http://fonts.googleapis.com/css?family=Signika:400,700,900"
    = stylesheet_link_tag "http://fonts.googleapis.com/css?family=Work+Sans:400,700,900"
    = stylesheet_link_tag "http://fonts.googleapis.com/css?family=Heebo:400,700,900"
    = stylesheet_link_tag "http://fonts.googleapis.com/css?family=Roboto+Slab:400,700,900"
    = stylesheet_link_tag "http://fonts.googleapis.com/css?family=Rokkitt:400,700,900"
  %body
    -if (user_signed_in?)
      = render "layouts/navbar"
